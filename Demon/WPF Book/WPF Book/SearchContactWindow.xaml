<Window x:Class="WPF_Book.SearchContactWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Book"
      mc:Ignorable="d"
      Title="Search name" Height="162.666" Width="325">

    <Grid Margin="0,0,0,-1">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="15,10,10,0" TextWrapping="Wrap" Text="Enter the name of the contact" VerticalAlignment="Top" Width="291" TextAlignment="Center"/>
        <TextBox x:Name="textBoxSearchContact" HorizontalAlignment="Left" Height="23" Margin="10,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="296"/>
        <Button x:Name="button" Content="Accept" Margin="120,101,120,0" VerticalAlignment="Top" RenderTransformOrigin="0.196,0.317" Click="button_Click"/>
        <TextBlock x:Name="textBlockError" HorizontalAlignment="Left" Margin="10,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.449,-0.312" Width="296" Height="20"/>

    </Grid>
</Window>
